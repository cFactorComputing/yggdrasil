<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.swiftwallet</groupId>
        <artifactId>yggdrasil</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <groupId>io.swiftwallet.yggdrasil</groupId>
    <artifactId>yggdrasil-main</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>SwiftWallet::Yggdrasil::Main</name>
    <url>http://swiftwallet.io</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>io.swiftwallet.odin</groupId>
            <artifactId>odin-core</artifactId>
        </dependency>
        <dependency>
            <groupId>io.swiftwallet.yggdrasil</groupId>
            <artifactId>yggdrasil-core</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>yggdrasil</finalName>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <mainClass>io.swiftwallet.yggdrasil.main.YggdrasilMain</mainClass>
                    <addResources>false</addResources>
                    <jvmArguments>
                        -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5008
                        -Dodin.zookeeper.connectString=localhost:2181 -Dmicro-service.id=yggdrasil-node1 -Dmicro-service.name=yggdrasil
                    </jvmArguments>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
