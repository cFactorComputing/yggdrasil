<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://camel.apache.org/schema/spring"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <routeContext id="io.swiftwallet.yggdrasil.adapters.email">
        <route id="io.swiftwallet.yggdrasil.adapters.email.request">
            <from uri="direct://EMAIL_ADAPTER"/>
            <toD uri="direct://${header.resourceEndpointType}"/>
            <process ref="emailUriProcessor"/>
            <toD uri="${header.mailEndpoint}"/>
            <process ref="emailAdapterPostProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.registration">
            <from uri="direct://REGISTRATION_CONFIRMATION_EMAIL"/>
            <process ref="registrationEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.otp">
            <from uri="direct://REGISTRATION_OTP_EMAIL"/>
            <process ref="registrationOtpEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.account.debit">
            <from uri="direct://DEBIT_EMAIL"/>
            <process ref="accountTransferEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.account.credit">
            <from uri="direct://CREDIT_EMAIL"/>
            <process ref="accountTransferEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.user.activation">
            <from uri="direct://USER_ACTIVATION_EMAIL"/>
            <process ref="userActivationEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.layalty.config.activation">
            <from uri="direct://LOYALTY_CONFIG_ACTIVATION_EMAIL"/>
            <process ref="loyaltyConfigActivationEmailTemplateProcessor"/>
        </route>

        <route id="io.swiftwallet.yggdrasil.adapters.email.user.loyalty.subscription">
            <from uri="direct://LOYALTY_SUBSCRIPTION_EMAIL"/>
            <process ref="userLoyaltySubscriptionEmailTemplateProcessor"/>
        </route>

    </routeContext>

    <sslContextParameters id="sslContextParameters">
        <trustManagers>
            <keyStore resource="${properties:email.truststore}" password="${properties:email.keystore}"/>
        </trustManagers>
    </sslContextParameters>


</beans:beans>